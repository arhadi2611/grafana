# Grafana Cloud Credentials
# Copy this file to .env and fill in your actual credentials
# Get these from: Grafana Cloud Portal > Connections > Add new connection

# GKE Cluster Configuration
GKE_PROJECT_ID=your-gcp-project-id
GKE_CLUSTER_NAME=your-autopilot-cluster-name
GKE_REGION=us-central1

# Grafana Cloud - Prometheus
# Format: https://prometheus-prod-XX-REGION.grafana.net/api/prom/push
GRAFANA_CLOUD_PROMETHEUS_URL=https://prometheus-prod-01-eu-west-0.grafana.net/api/prom/push
GRAFANA_CLOUD_PROMETHEUS_USER=123456
GRAFANA_CLOUD_API_KEY=your-api-key-here

# Grafana Cloud - Loki (Logs)
# Format: https://logs-prod-XX-REGION.grafana.net/loki/api/v1/push
GRAFANA_CLOUD_LOKI_URL=https://logs-prod-006-eu-west-0.grafana.net/loki/api/v1/push
GRAFANA_CLOUD_LOKI_USER=123456

# Grafana Cloud - Tempo (Traces) - Optional
GRAFANA_CLOUD_TEMPO_URL=https://tempo-prod-XX-REGION.grafana.net:443
GRAFANA_CLOUD_TEMPO_USER=123456

# Grafana Cloud Stack URL (for dashboard import)
GRAFANA_CLOUD_STACK_URL=https://yourstack.grafana.net
GRAFANA_CLOUD_SERVICE_ACCOUNT_TOKEN=your-service-account-token

# Namespace for monitoring components
MONITORING_NAMESPACE=monitoring

# Optional: Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: PagerDuty integration key
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key